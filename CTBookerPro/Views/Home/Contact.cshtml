@model CTBookerPro.Models.ContactViewModel

@{
    ViewBag.Title = "Contact";
}

<div class="container">
    <main aria-labelledby="title">
        <h2 id="title">@ViewBag.Title.</h2>
        <h3>@ViewBag.Message</h3>

        @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

            <div class="form-group">
                @Html.LabelFor(m => m.RecipientEmail, "Recipient Email", new { @class = "control-label" })
                @Html.TextBoxFor(m => m.RecipientEmail, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Subject, "Subject", new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Message, "Message", new { @class = "control-label" })
                @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="attachment">Attachment:</label>
                <input type="file" id="attachment" name="attachment" class="form-control">
            </div>

            <div class="form-group">
                @Html.Label("Select Recipients", new { @class = "control-label" })
                @Html.ListBoxFor(m => m.SelectedEmails, Model.AvailableEmails, new { @class = "form-control", multiple = "multiple" })
            </div>

            <input type="submit" value="Send Message" class="btn btn-primary" />
        }
    </main>
</div>